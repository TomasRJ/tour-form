@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form class="form-check ps-0 w-75 position-absolute top-50 start-50 translate-middle" style="max-width: 400px;">
    <p class="fs-3" style="font-weight: 600;">Tour Selection</p>
    <label for="webform" class="form-label" style="font-weight: 600;">Name</label>
    <input type="email" class="form-control mb-3" id="name">
    <label for="webform" class="form-label" style="font-weight: 600;">Email</label>
    <input type="email" class="form-control mb-3" id="email" placeholder="name@example.com">
    <label for="webform" class="form-label" style="font-weight: 600;">Tours</label>
    <select class="form-select w-50 mb-3" id="select" aria-label="select">
        <option selected>Choose one</option>
        <option value="berlin">Berlin</option>
        <option value="cape-town">Cape Town</option>
        <option value="london">London</option>
        <option value="new">New York</option>
        <option value="paris">Paris</option>
        <option value="rio-de-janeiro">Rio de Janeiro</option>
        <option value="rome">Rome</option>
        <option value="sydney">Sydney</option>
        <option value="tokyo">Tokyo</option>
    </select>
    <div class="input-group mb-3">
        <div class="me-3">
            <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input">
            <label class="custom-control-label" for="customRadio1">Book</label>
        </div>
        <div>
            <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input">
            <label class="custom-control-label" for="customRadio1">Cancel</label>
        </div>
    </div>    
    <button type="submit" class="btn btn-primary mb-3">Submit</button>
</form>
